{
    "manifest_version": 3,
    "name": "Tab Saver and Restorer",
    "version": "1.0",
    "description": "Salva e restaura os endere√ßos das abas abertas no navegador.",
    "permissions": [
      "tabs",
      "storage",
      "downloads"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  
  